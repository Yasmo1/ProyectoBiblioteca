                                                                    {% elseif inve.JefeProyecto.EsMaster %}
                                                                        Ms.C.
                                                                    {% endif %}
                                                                    {{ inve.JefeProyecto.nombre }}
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <p class="Estilo_Noticias">
                                                        {{ inve.descripcion }}
                                                    </p>
                                                </li>
                                            {% endif %}
                                        {% endfor %}

                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div id="resul">
                                    <br><br><br>
                                    <h2 class="Estilo_Enunciado_Noticias">  Principales resultados {{ anno }} </h2>
                                    <ul class="list-unstyled">
                                        {% for resulta in Resultados %}
                                            <li>
                                                <p class="Estilo_Noticias">
                                                    <strong>Proyecto</strong>: {{ resulta.proyecto }}
                                                    <br>
                                                    <strong>Resultado</strong>: {{ resulta.Resultado }}
                                                    <br>
                                                    <strong>Autora</strong>:  {{ resulta.JefeProyecto.nombre }}
                                                    <br>
                                                    <strong>Tipo de resultado</strong>:  Tesis de {{ resulta.tiporesultado }}
                                                    <br>
                                                    <strong>Relevancia</strong>: {{ resulta.relevancia }}
                                                </p>

                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                            <li>

                                <div id="lin">
                                    <br><br><br>
                                    <h2 class="Estilo_Enunciado_Noticias">  Lineas </h2>
                                    <ul class="list-unstyled Estilo_Noticias">
                                        {% for linea in Liniainvestigacion %}
