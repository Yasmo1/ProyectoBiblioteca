{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">

        <div class="col-lg-7 col-md-7 col-sm-7">

            <div class="Mi_Biblioteca_container">
                <div class="row">

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="page-header">
                            <h3 class="Estilo_Enunciado_Noticias">Investigaciones</h3>
                        </div>
                        <br>
                        <ul class="list-unstyled">
                            <li>
                                <div id="pi">
                                    <br><br><br>
                                    <h2 class="Estilo_Enunciado_Noticias"> Proyectos de interes institucional (PI)</h2>
                                    <ul class="list-unstyled">
                                        {% for pii in PII %}
                                            {% if pii.tipo == "Proyecto de Interes Institucional" %}
                                            <li>
                                                <p class="Estilo_Noticias">
                                                  <strong> {{ pii.Alias }} </strong>{{ pii.nombre }}
                                                </p>

                                                <div class="row">
                                                    <div class="col-lg-3 col-md-3">
                                                        <img class="img-responsive img-rounded" alt="no disponible" width="120"
                                                             src="{{ asset('files/fotostrabajadores/'~pii.JefeProyecto.image) }}"/>
                                                    </div>
                                                    <div class="col-lg-8 col-md-8 col-sm-8 Mi_Margen_Superior">

                                                        <div class="Estilo_Enunciado_Biblioteca_MasInformacion_Bold">Jefe de Proyecto:</div>

                                                        <a href="mailto:{{  pii.JefeProyecto.correo }}"><div class="Estilo_Enunciado_Biblioteca_MasInformacion_Nombres_Bold">
                                                                {% if  pii.JefeProyecto.EsDoctor %}
                                                                    Dr.C.
                                                                {% elseif pii.JefeProyecto.EsMaster %}
                                                                    Ms.C.
                                                                    {% endif %}
                                                                {{ pii.JefeProyecto.nombre }}
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                                <p class="Estilo_Noticias">
                                                    {{ pii.descripcion }}
                                                </p>
                                                <br>

                                            </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                            <li>

                                <div id="pint">
                                    <br><br><br>
                                    <h2 class="Estilo_Enunciado_Noticias">  Proyectos internacionales </h2>
                                    <ul class="list-unstyled">
                                        {% for pii in PII %}
                                            {% if pii.tipo == "Proyecto Internacional" %}
