                                                                    {% if  pii.JefeProyecto.EsDoctor %}
                                                                        Dr.C.
                                                                    {% elseif pii.JefeProyecto.EsMaster %}
                                                                        Ms.C.
                                                                    {% endif %}
                                                                    {{ pii.JefeProyecto.nombre }}
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <p class="Estilo_Noticias">
                                                        {{ pii.descripcion }}
                                                    </p>
                                                    <br>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                            <li>

                                <div id="inv">
                                    <br><br><br>
                                    <h2 class="Estilo_Enunciado_Noticias">  Investigaciones doctorales en curso </h2>
                                    <ul class="list-unstyled">
                                        {% for inve in Investigaciones %}
                                            {% if inve.Tipo == "Doctorado" %}
                                                <li>
                                                    <p class="Estilo_Noticias">
                                                        <strong>Tema:</strong>  {{ inve.Tema }}
                                                    </p>

                                                    <div class="row">
                                                        <div class="col-lg-3 col-md-3">
