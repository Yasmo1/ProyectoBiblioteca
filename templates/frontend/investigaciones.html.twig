                                                    <p class="Estilo_Noticias">
                                                        {{ pii.Alias }} {{ pii.nombre }}
                                                    </p>

                                                    <div class="row">
                                                        <div class="col-lg-3 col-md-3">
                                                            <img class="img-responsive img-rounded" alt="no disponible" width="120"
                                                                 src="{{ asset('files/fotostrabajadores/'~pii.JefeProyecto.image) }}"/>
                                                        </div>
